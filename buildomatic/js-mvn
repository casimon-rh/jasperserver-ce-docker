#!/bin/sh

# Usage example:
# ./js-mvn verify -o
# ./js-mvn verify -projects=:adhoc-integration-test -o

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

export MAVEN_OPTS="-Xms128m -Xmx512m -XX:PermSize=32m -XX:MaxPermSize=256m"

MVN_RUN=mvn

CMD_LINE_ARGS=$*

$MVN_RUN -s /opt/jenkins/workspace/release-6.4.2/jasperserver-ce/jasperserver/buildomatic/build_conf/build-ce/maven_settings.xml -DskipUnitTestDir $CMD_LINE_ARGS

# ant fix-webapp-name
# Coping war folder to installer location
echo "Buildomatic war folders maybe outdated"
echo "    /opt/jenkins/workspace/release-6.4.2/jasperserver-ce/jasperserver/buildomatic/install_resources/war/jasperserver"
echo "    /opt/jenkins/workspace/release-6.4.2/jasperserver-ce/jasperserver/buildomatic/install_resources/war/jasperserver-pro"
echo "Pro tip: To deploy webapp use 'ant copy-pro-war deploy-webapp-pro'"


